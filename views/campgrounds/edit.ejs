<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/images.css" class="rel">
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT " enctype="multipart/form-data" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input required value="<%=campground.title%> " class="form-control" type="text" name="campground[title]" id="title">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input required value="<%=campground.location%> " class="form-control" type="text" name="campground[location]" id="location">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div> -->
                <!-- <div class="input-group mb-3">
                    <input type="file" name="image" class="form-control" id="inputGroupFile02" multiple>
                    <label class="input-group-text" for="inputGroupFile02">Add images</label>
                </div> -->
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add Images</label>
                    <input required class="form-control" type="text" name="campground[image]" id="location" value="<%=campground.image%> ">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input required value="<%=campground.price%> " type="text" class="form-control" name="campground[price]" aria-label="price" placeholder="0">
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea required class="form-control" type="text" name="campground[description]" id="location"><%=campground.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Add Image(s)</label>
                    <div class="form-file custom-file">
                        <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                        <label for="image" class="form-label custom-file-label"></label>
                    </div>
                    <div id="formFile"></div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img,i){ %>
                        <img src="<%=img.thumbnail %> " class="img-thumbnail mx-auto" " alt=" ">
                        <div class="form-check form-check-inline ">
                            <input class="form-check-input " type="checkbox " id="image-<%=i%>" name="deleteImages[]" value="
                        <%= img.filename%> ">
                            <label class="form-check-label" for="image-<%=i %>">#<%=i %></label>
                </div>
                <% }) %>
        </div>
        <div class="mb-3 ">
            <button class="btn btn-info ">Submmit changes</button>
        </div>
        </form>
        <div class="mb-3 ">
            <a href="/campgrounds ">Beck To campgrounds</a>
        </div>

    </div>
    </div>